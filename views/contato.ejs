            <script>
                function initMap() {
                    const clinica = new google.maps.LatLng(-20.455778, -54.600889);
                    const map = new google.maps.Map(document.getElementById("map"), {
                        center: clinica,
                        zoom: 17,
                    });

                    let marker = new google.maps.Marker({
                        position: clinica,
                        map: map
                    });

                    let infoWindow = new google.map.InfoWindow({ content: '<h5>Antonio Sergio</h5>' });

                    marker.addEventListener('click', function () {
                        infoWindow.open(map, marker);
                    });
                };
            </script>
